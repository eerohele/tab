(spec/def ::pass? true?)
(spec/def ::ret (spec/keys :req-un [::pass?]))

(set! *print-length* nil)
(set! *print-level* nil)

;; Prints readably
(quick-check 10000
  (for-all [x gen/any-printable-equatable]
    (= x (read-string (with-out-str (pp/pprint x))))))

(xr/check! ::ret)

